@model Biblioteca.Models.Livro

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>Tem certeza de que deseja eliminar este livro tão bão?</h3>
<div>
    <h4>Livro</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeLivro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeLivro)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AutorId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Autor.NomeAutor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Editora)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Editora)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ano)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ano)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.tema)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.tema)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumVolume)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumVolume)
        </dd>
        <dt class = "col-sm-2">
